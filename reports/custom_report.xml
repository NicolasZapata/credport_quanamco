<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="external_layout_colombia_report_order">
            <t t-if="not o" t-set="o" t-value="doc" />
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id" />
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()" />
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company" />
                </t>
            </t>
            <t t-call="credport_quanamco.external_layout_standard_colombia_report_order">
                <t t-raw="0" />
            </t>
        </template>
        <template id="external_layout_standard_colombia_report_order">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <div t-attf-class="header o_company_#{company.id}_layout"
                t-att-style="report_header_style" height="900">
                <div class="row">
                    <t t-if="o.move_type =='in_invoice'">
                        <div class="col-5">
                            <div style="padding: 2px;">
                                <img t-if="o.company_id.logo"
                                    t-att-src="image_data_uri(o.company_id.logo)"
                                    width="210px" height="90" />
                            </div>
                            <div>
                                <t t-if="o.company_id.name">
                                    <h5>
                                        <t>
                                            <t t-esc="o.company_id.partner_id.name" />

                                        </t>
                                    </h5>
                                </t>
                            </div>

                            <div style="font-size: 13px;">
                                <t t-if="o.company_id.partner_id.vat">
                                    <b>NIT:</b>
                                    <t t-esc="o.company_id.partner_id.vat" />

                                </t>
                            </div>

                            <div style="font-size: 13px;">
                                <t t-if="o.company_id.partner_id.street">
                                    <t t-esc="o.company_id.partner_id.street " />

                                </t>
                                <t t-if="o.company_id.partner_id.state_id"> - <t
                                        t-esc="o.company_id.partner_id.state_id.name" />
                                </t>
                                <t t-if="o.company_id.partner_id.country_id"> - <t
                                        t-esc="o.company_id.partner_id.country_id.name" />
                                    <br />
                                </t>
                            </div>
                        </div>
                        <div class="col-4">
                        </div>
                    </t>
                </div>
                <br />
                <div class="row">
                    <div class="col-12">
                        <t t-if="o.move_type =='in_invoice'">
                            <div>
                                <div class="text-center">
                                    <h5>
                                        <t t-if="o.move_type =='in_invoice'">
                                            <span>FACTURA DE PROVEEDOR</span>
                                            <br />
                                            <t t-if="o.name">
                                                <t t-esc="o.name" />
                                                <br />
                                            </t>
                                            <t t-else="">
                                                <t t-esc="o.ref" />
                                                <br />
                                            </t>
                                        </t>
                                        <t t-if="o.move_type =='in_refund'">
                                            <span>FACTURA RECTIFICATIVA DE PROVEEDOR</span>
                                            <br />
                                            <t t-if="o.name">
                                                <t t-esc="o.name" />
                                                <br />
                                            </t>
                                            <t t-else="">
                                                <t t-esc="o.ref" />
                                                <br />
                                            </t>
                                        </t>
                                    </h5>
                                    <br />
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>

            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
                t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout" />
                <t t-raw="0" />
            </div>

            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center ">
                    <div name="financial_infos">
                        <span t-field="company.report_footer" />
                    </div>

                    <div t-if="report_type == 'pdf'" class="text-muted"> Page: <span class="page" />
                        / <span class="topage" />
                    </div>
                </div>
            </div>
        </template>


        <template id="colombia_report">
            <t t-call="credport_quanamco.external_layout_colombia_report_order">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="page" style="font-size: 12px;">
                    <style>
                        .table_custom > thead > tr > th,
                        .table_custom > tbody > tr > th,
                        .table_custom > tfoot > tr > th,
                        .table_custom > thead > tr > td,
                        .table_custom > tbody > tr > td,
                        .table_custom > tfoot > tr > td {
                        padding: 8px;
                        line-height: 1.42857143;
                        vertical-align: top;
                        }
                        .table_tbody_tr_td_div > tbody > tr > td > div,
                        .table_tbody_tr_td_div > tbody > tr > td > b > div{
                        padding: 4px;
                        }
                    </style>
                    <t t-if="o.move_type =='in_invoice'">
                        <div class="row"
                            style="padding-bottom: 5px; padding-left:15px;padding-right:15px;">
                            <div class="col-6"
                                style="padding-left: 2px; border: 2px solid #000000 !important;border-radius: 10px;">
                                <table width="100%">
                                    <tbody>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                PROVEEDOR :
                                            </span>
                                            <br />
                                            <span>
                                                NIT / CC :
                                            </span>
                                            <br />
                                            <span>
                                                DIRECCIÓN:
                                            </span>
                                            <br />
                                            <span>
                                                LELÉFONO:
                                            </span>
                                            <br />
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                <t t-esc="o.partner_id.name" />
                                            </span>
                                            <br />
                                            <span>
                                                <t t-esc="o.partner_id.vat" />
                                            </span>
                                            <br />
                                            <span>
                                                <t t-esc="o.partner_id.street " />
                                                <t
                                                    t-esc="o.partner_id.city_id.name" />- <t
                                                    t-esc="o.partner_id.country_id.name" />
                                            </span>
                                            <br />
                                            <span>
                                                <t t-esc="o.partner_id.phone" />
                                            </span>
                                            <br />
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-6"
                                style="padding-left: 2px;border: 2px solid #000000 !important;border-radius: 10px;margin-left:3px">
                                <table width="100%">
                                    <tbody>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                NÚMERO DE DOCUMENTO:
                                            </span>
                                            <br />
                                            <span>
                                                FECHA CONTABLE:
                                            </span>
                                            <br />
                                            <span>
                                                FECHA DE VENCIMIENTO:
                                            </span>
                                            <br />
                                            <span>
                                                MONEDA:
                                            </span>
                                            <br />
                                            <t t-if="o.exchange_date"> FECHA TASA DE CAMBIO <br />
                                            </t>
                                            <t t-if="o.exchange_rate"> TASA DE CAMBIO <br />
                                            </t>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                <t t-esc="o.ref" />
                                            </span>
                                            <br />
                                            <span>
                                                <t t-esc="o.date.strftime('%d-%m-%Y')" />
                                            </span>
                                            <br />
                                            <span>
                                                <t t-if="o.invoice_date_due">
                                                    <t
                                                        t-esc="o.invoice_date_due.strftime('%d-%m-%Y')" />
                                                </t>

                                            </span>
                                            <br />
                                            <span>
                                                <t t-esc="o.currency_id.name" />
                                            </span>

                                            <span t-if="o.exchange_date">
                                                <br />
                                                <t t-esc="o.exchange_date.strftime('%d-%m-%Y')" />
                                            </span>

                                            <span t-if="o.exchange_rate">
                                                <br />
                                                <t t-esc="o.exchange_rate" />
                                            </span>
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div
                            class="row"
                            style="padding-bottom: 5px; padding-left:15px;padding-right:15px;">
                            <div class="col-12"
                                style="padding-left: 2px; border: 2px solid #000000 !important;border-radius: 10px;">
                                <table width="100%">
                                    <tbody>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                DIARIO :
                                            </span>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                <t t-esc="o.journal_id.name" />
                                            </span>
                                        </td>
                                        <td class="text-right"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                TIPO DE DOCUMENTO :
                                            </span>
                                        </td>
                                        <td class="text-right"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                <t t-if="o.move_type == 'entry'">
                                                    Asiento contable
                                                </t>
                                                <t t-if="o.move_type == 'out_invoice'">
                                                    Factura de cliente
                                                </t>
                                                <t t-if="o.move_type == 'out_refund'">
                                                    Factura rectificativa de cliente
                                                </t>
                                                <t t-if="o.move_type == 'in_invoice'">
                                                    Factura de proveedor
                                                </t>
                                                <t t-if="o.move_type == 'in_refund'">
                                                    Factura rectificativa de proveedor
                                                </t>
                                                <t t-if="o.move_type == 'out_receipt'">
                                                    Recibo de ventas
                                                </t>
                                                <t t-if="o.move_type == 'in_receipt'">
                                                    Recibo de compra
                                                </t>
                                            </span>
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div
                            class="row"
                            style="padding-bottom: 5px; padding-left:15px;padding-right:15px;">
                            <div class="col-12"
                                style="padding-left: 2px; border: 2px solid #000000 !important;border-radius: 10px;">
                                <table width="100%">
                                    <tbody>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                ALMACÉN :
                                            </span>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                            </span>
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />
                        <t
                            t-set="display_discount"
                            t-value="any([l.discount for l in o.invoice_line_ids])" />
                        <table
                            name="invoice_line_table"
                            style="border-spacing: 0; width: 100%;max-width: 100%;margin-bottom: 22px;border: 1px solid #000000; padding: 4px;"
                            class="table_custom">
                            <thead>
                                <tr style="border: 1px solid #000000; padding: 4px;">
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="6" />
                                    <th class="text-center"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        Referencia
                                    </th>
                                    <th name="th_description" class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Descripción</span>
                                    </th>
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Cuentas Analíticas</span>
                                    </th>
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Etiquetas Analíticas</span>
                                    </th>
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Fecha de Ejecucíon</span>
                                    </th>
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Guía</span>
                                    </th>
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Cantidad</span>
                                    </th>
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Unidad de Medida</span>
                                    </th>
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Valor Unitario</span>
                                    </th>
                                    <!--<th
                                    class="text-left" style="color:#000000;background: silver;">-->
                                    <!--<span>Nombre
                                    Impuesto</span>-->
                                    <!--</th>-->
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Valor Impuesto</span>
                                    </th>
                                    <th class="text-left"
                                        style="background-color: #AB1D1D;color:#FFFFFF;">
                                        <span>Sub Total</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="count" t-value="0" />
                                <t t-set="current_subtotal" t-value="0" />
                                <t t-set="lines"
                                    t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" />
                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_subtotal"
                                        groups="account.group_show_line_subtotals_tax_excluded" />
                                    <t t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_total"
                                        groups="account.group_show_line_subtotals_tax_included" />
                                    <t t-set="count" t-value="count + 1" />
                                    <tr
                                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type"
                                            name="account_invoice_line_accountable">
                                            <td>
                                                <span t-field="line.product_id.default_code" />
                                            </td>
                                            <td name="account_invoice_line_name">
                                                <span t-field="line.product_id.name"
                                                    t-options="{'widget': 'text'}" />
                                            </td>
                                            <td>
                                                <span t-field="line.analytic_account_id.name" />
                                            </td>
                                            <td
                                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span
                                                    t-esc="', '.join(map(lambda x: (x.name), line.analytic_tag_ids))"
                                                    id="line_tag_ids" />
                                            </td>
                                            <td>
                                                <span t-field="line.execution_date" />
                                            </td>
                                            <td>
                                                <span t-field="line.guide" />
                                            </td>
                                            <td>
                                                <span t-field="line.quantity" />
                                            </td>
                                            <td>
                                                <span t-field="line.product_uom_id.name" />
                                            </td>
                                            <td>
                                                <span t-field="line.price_unit" />
                                            </td>
                                            <!--<td
                                            t-attf-class="text-left {{ 'd-none d-md-table-cell' if
                                            report_type == 'html' else '' }}">-->
                                            <!--<span
                                            t-esc="', '.join(map(lambda x: (x.description or
                                            x.name), line.tax_ids))" id="line_tax_ids"/>-->
                                            <!--</td>-->
                                            <td class="text-right">
                                                <span t-esc="'{:0,.2f}'.format(line.price_iva_tax)" />
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:0,.2f}'.format(line.price_subtotal)" />
                                            </td>
                                        </t>
                                    </tr>
                                    <t
                                        t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <div
                            class="row pb-3" style="padding-left:15px;padding-right:15px;">
                            <div class="col-7" style="padding-left: 1px;">
                                <table width="80%" height="100px">
                                    <tbody style="font-size: 13px;">
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-5" style="padding-left: 1px;">
                                <table width="100%" style="border: 1px solid #FFFFFF !important;"
                                    class="table_tbody_tr_td_div">
                                    <colgroup>
                                        <col span="2" style="width: 60%;" />
                                        <col span="1" style="width: 40%;" />
                                    </colgroup>
                                    <tbody>
                                        <tr style="border: 1px solid #FFFFFF !important;">
                                            <div style="border: 1px solid #FFFFFF !important;">
                                                <td>
                                                    MONTO LIBRE DE IMPUESTOS
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <t t-if="o.amount_untaxed">
                                                        <span
                                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                            t-field="o.amount_untaxed" />
                                                    </t>
                                                </td>
                                                <t t-foreach="o.amount_by_group"
                                                    t-as="amount_by_group">
                                                    <tr style="">
                                                        <t
                                                            t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                            <td>
                                                                <span class="text-nowrap"
                                                                    t-esc="amount_by_group[0]" />
                                                            </td>
                                                            <td class="text-right o_price_total">
                                                                <span class="text-nowrap"
                                                                    t-esc="amount_by_group[3]" />
                                                            </td>
                                                        </t>
                                                        <t t-else="">
                                                            <td>
                                                                <span t-esc="amount_by_group[0]" />
                                                                <span class="text-nowrap">
                                                                    <!--<t
                                                                    t-esc="amount_by_group[4]"/>-->
                                                                </span>
                                                            </td>
                                                            <td class="text-right o_price_total">
                                                                <span class="text-nowrap"
                                                                    t-esc="amount_by_group[3]" />
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </t>
                                                <td>
                                                    TOTAL A PAGAR
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <t t-if="o.amount_total">
                                                        <span
                                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                            t-field="o.amount_total" />
                                                    </t>
                                                </td>
                                            </div>
                                            <!--<div
                                            style="border: 1px solid #FFFFFF !important;">-->
                                            <!--<t
                                            t-if="o.amount_total">-->
                                            <!--<span
                                            t-options='{"widget": "monetary", "display_currency":
                                            o.currency_id}'-->
                                            <!--t-field="o.amount_total"/>-->
                                            <!--</t>-->
                                            <!--</div>-->
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />
                        VALOR EN LETRAS: <br />
                        <div class="row"
                            style="padding-bottom: 5px; padding-left:15px;padding-right:15px;">
                            <div class="col-12"
                                style="padding-left: 2px; border: 2px solid #000000 !important;border-radius: 10px;">
                                <table width="100%">
                                    <tbody>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;"> SON: <t
                                                t-esc="o.amount_text" />
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />
                        OBSERVACIONES: <br />
                        <div class="row"
                            style="padding-bottom: 5px; padding-left:15px;padding-right:15px;">
                            <t>
                                <div class="col-12"
                                    style="padding-left: 2px; border: 2px solid #000000 !important;border-radius: 10px;">
                                    <table width="100%">
                                        <tbody>
                                            <td class="text-left"
                                                style="border: 1px solid #FFFFFF !important;">
                                                <span t-field="o.narration" />
                                                <br />
                                                <span t-field="o.payment_reference" />
                                            </td>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                        </div>
                        <br />
                        <div
                            class="row"
                            style="padding-bottom: 5px; padding-left:15px;padding-right:15px;">
                            <div class="col-12"
                                style="padding-left: 2px; border: 2px solid #000000 !important;border-radius: 10px;">
                                <table width="100%">
                                    <tbody>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;"> Elaboró: <span
                                                t-field="o.user_id.name" />
                                            <!-- <br /> Confirmó: <span
                                                t-field="o.users_co_id.name" /> -->
                                        </td>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />
                        <div
                            class="row"
                            style="padding-bottom: 5px; padding-left:15px;padding-right:15px;page-break-inside: avoid;">
                            <div class="col-12"
                                style="padding-left: 2px; border: 2px solid #000000 !important;border-radius: 10px;">
                        Resolución DIAN : <br />
                                <table width="40%">
                                    <tbody>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                Resolución de Facturación:
                                            </span>
                                            <br />
                                            <span>
                                                Fecha de Resolución:
                                            </span>
                                            <br />
                                            <span>
                                                Fecha de finalización Resolución:
                                            </span>
                                            <br />
                                            <span>
                                                Número Inicial:
                                            </span>
                                            <br />
                                            <span>
                                                Número Final:
                                            </span>
                                            <br />
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid #FFFFFF !important;">
                                            <span>
                                                <span
                                                    t-field="o.journal_id.l10n_co_edi_dian_authorization_number" />
                                            </span>
                                            <br />
                                            <span>
